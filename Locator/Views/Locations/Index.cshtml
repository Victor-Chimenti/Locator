@using  Locator.Models;
@model CleanLocationViewModel

@{
    ViewData["Title"] = "Index";
}

<script src="~/js/location.js"></script>
<script src="~/js/filterCards.js"></script>
<script src="~/js/map.js"></script>

<script type="text/javascript">
    getLocation()
</script>


<!--
    main row is split into three columns
        filter-wrapper  :   Left    :   Filter-Search Parameters
        center-index    :   Center  :   Houses the Map
        sidebar-wrapper :   Right   :   Location Cards
 -->
<div class="container-fluid">
    <div class="row" id="main-row">
        <div class="col-xs-12 col-md-3" id="filter-wrapper">
            <h3 id="filter-head">Refine by</h3>
            <div id="filterSearch-wrapper">
                <form class="searchField d-block">
                    <fieldset class="atmSearch">
                        <div>
                            <input type="text" class="form-control" name="searchCards" id="keyword_search" placeholder="Search by Keyword" autofocus aria-label="Search Keyword" />
                        </div>
                    </fieldset>
                </form>
                <div class="text-left accordion panel">
                    <div class="panel-header">
                        <a href="#" class="btn-link" id="atm-locations" data-toggle="collapse" data-target="#atm-qualities" aria-expanded="false" aria-controls="atm-qualities">
                            <span class="panelTitleBox">
                                <i class="fas fa-minus"></i><i class="fas fa-plus"></i>
                                <span class="panel-name">Show ATMs With...</span>
                            </span>
                        </a>
                    </div>
                    <div class="panel-body collapse in" id="atm-qualities" aria-expanded="false">
                        <form class="searchATM d-inline">
                            <fieldset class="atmSearch">
                                <div>
                                    <input type="checkbox" id="Hours" name="24hrs / Business Hours Access" value="24">
                                    <label for="Hours">24 Hour</label>
                                </div>
                                <div>
                                    <input type="checkbox" id="DriveThruOnly" name="Drive Thru Only" value="Y">
                                    <label for="DriveThruOnly">Drive Up</label>
                                </div>
                                <div>
                                    <input type="checkbox" id="Surcharge" name="Surcharge" value="N">
                                    <label for="Surcharge">Surcharge Free</label>
                                </div>
                                <div>
                                    <input type="checkbox" id="AcceptDeposit" name="Accepts Deposit" value="Y">
                                    <label for="AcceptDeposit">Accepts Deposits</label>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="text-left accordion panel">
                        <!-- this accordion functions only below 767px for mobile -->
                        <div class="panel-header">
                            <a href="#" class="btn-link" id="nfc-locations" data-toggle="collapse" data-target="#nfs-qualities" aria-expanded="false" aria-controls="nfs-qualities">
                                <span class="panelTitleBox">
                                    <i class="fas fa-minus"></i><i class="fas fa-plus"></i>
                                    <span class="panel-name">Show Branch Locations With...</span>
                                </span>
                            </a>
                        </div>
                        <div class="panel-body collapse in" id="nfs-qualities" aria-expanded="false">
                            <form class="searchNFC d-inline-block">
                                <fieldset class="nfcSearch">
                                    @*<div>
                                            <input type="checkbox" id="DriveThruOnly" name="Drive Thru Only" value="Y">
                                            <label for="DriveThruOnly">Drive Up</label>
                                        </div>*@
                                    <div>
                                        <input type="checkbox" id="CoinStar" name="Coin Star" value="Y">
                                        <label for="CoinStar">Coin Star</label>
                                    </div>

                                    <div>
                                        <input type="checkbox" id="TellerServices" name="Teller Services" value="Y">
                                        <label for="TellerServices">Teller Services</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" id="_24hourExpressBox" name="24 Hour Express Box" value="Y">
                                        <label for="_24hourExpressBox">24 Hour Express Box</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" id="PartnerCreditUnion" name="Partner Credit Union" value="Y">
                                        <label for="PartnerCreditUnion">Partner Credit Unions</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" id="MemberConsultant" name="Member Consultant" value="Y">
                                        <label for="MemberConsultant">Meet With a Member Consultant</label>
                                    </div>
                                    <div>
                                        <input type="checkbox" id="InstantDebitCardReplacement" name="Instant Debit Card Replacement" value="Y">
                                        <label for="InstantDebitCardReplacement">Instant Debit Card Replacement</label>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6" id="center-index">
            <div class="col-12 text-center" id="mapBlock">
                <h1 class="text-justify" style="width: 100%" ;>Map Goes Here</h1>
                <div class="d-block" id="map-wrapper" style="position: relative; overflow: hidden;"></div>
                <div id="directionsPanel"></div>
            </div>
        </div>
        <div class="col-xs-12 col-md-3" id="sidebar-wrapper">
            <h3 id="sidebar-head">ATM Nearby</h3>
            <div class="col-12" id="cards-wrapper">
                @foreach (var card in Model.CleanLocationList)
                {
                    <div class="card accordion" id="id-@card.LocationId">
                        <div class="card-header" id="heading-@card.LocationId">
                            <a href="#" class="btn-link" id="button-@card.LocationId" data-toggle="collapse" data-target="#collapse-@card.LocationId" aria-expanded="false" aria-controls="collapse-@card.LocationId">
                                <span class="cardTitleBox">
                                    <i class="fas fa-minus"></i><i class="fas fa-plus"></i>
                                    <span class="Name card-title card-name">@card.Name</span>
                                </span>
                            </a>
                            <p class="address" value="@card.Address">@card.Address</p>
                        </div>
                        <div class="collapse in" id="collapse-@card.LocationId" aria-expanded="false">
                            <div class="card-body">
                                <div class="card-subtitle">
                                    <p class="subTitle Hours @(card.Hours ?? "empty")" value="@(card.Hours ?? "Unknown")">@(card.Hours ?? "Unknown")</p>
                                    <p class="subTitle RetailOutlet @(card.RetailOutlet ?? "empty")" value="@(card.RetailOutlet ?? "Unknown")">@(card.RetailOutlet ?? "Unknown")</p>
                                    <p class="subTitle InstallationType @(card.InstallationType ?? "empty")" value="@(card.InstallationType ?? "Unknown")">@(card.InstallationType ?? "Unknown")</p>
                                    <p class="subTitle AccessNotes @(card.AccessNotes ?? "empty")" value="@(card.AccessNotes ?? "Unknown")">Notes: @(card.AccessNotes ?? "Unknown")</p>
                                </div>
                                <ul class="list-group">


                                    @{
                                        if (card.HandicapAccess == BooleanEnum.Y)
                                        {
                                            <li class="list-group-item HandicapAccess" data-value="@card.HandicapAccess.ToValue()">Handicap Access: @card.HandicapAccess.ToTitle())</li>
                                        }

                                        if (card.DriveThruOnly == BooleanEnum.Y)
                                        {

                                            <li class="list-group-item DriveThruOnly" data-value="@card.DriveThruOnly.ToValue()">Drive Thru Only: @card.DriveThruOnly.ToTitle())</li>
                                        }
                                    }

                                    @*<li class="list-group-item Surcharge @(card.Surcharge ?? "empty")" data-value="@(card.Surcharge ?? "Unknown")">Surcharge: @(card.Surcharge ?? "Unknown")</li>
                                        <li class="list-group-item AcceptDeposit @(card.AcceptDeposit ?? "empty")" data-value="@(card.AcceptDeposit ?? "Unknown")">Accepts Deposits: @(card.AcceptDeposit ?? "Unknown")</li>
                                        <li class="list-group-item AcceptCash @(card.AcceptCash ?? "empty")" data-value="@(card.AcceptCash ?? "Unknown")">Accepts Cash: @(card.AcceptCash ?? "Unknown")</li>
                                        <li class="list-group-item Cashless @(card.Cashless ?? "empty")" data-value="@(card.Cashless ?? "Unknown")">Cashless: @(card.Cashless ?? "Unknown")</li>
                                        <li class="list-group-item CoinStar @(card.CoinStar ?? "empty")" data-value="@(card.CoinStar ?? "Unknown")">Accepts Cash: @(card.CoinStar ?? "Unknown")</li>
                                        <li class="list-group-item TellerServices @(card.TellerServices ?? "empty")" data-value="@(card.TellerServices ?? "Unknown")">Accepts Cash: @(card.TellerServices ?? "Unknown")</li>
                                        <li class="list-group-item _24hourExpressBox @(card._24hourExpressBox ?? "empty")" data-value="@(card._24hourExpressBox ?? "Unknown")">Accepts Cash: @(card._24hourExpressBox ?? "Unknown")</li>
                                        <li class="list-group-item PartnerCreditUnion @(card.PartnerCreditUnion ?? "empty")" data-value="@(card.PartnerCreditUnion ?? "Unknown")">Accepts Cash: @(card.PartnerCreditUnion ?? "Unknown")</li>
                                        <li class="list-group-item MemberConsultant @(card.MemberConsultant ?? "empty")" data-value="@(card.MemberConsultant ?? "Unknown")">Accepts Cash: @(card.MemberConsultant ?? "Unknown")</li>
                                        <li class="list-group-item InstantDebitCardReplacement @(card.InstantDebitCardReplacement ?? "empty")" data-value="@(card.InstantDebitCardReplacement ?? "Unknown")">Accepts Cash: @(card.InstantDebitCardReplacement ?? "Unknown")</li>
                                        <li class="list-group-item SelfServiceDevice @(card.SelfServiceDevice ?? "empty")" data-value="@(card.SelfServiceDevice ?? "Unknown")">Self Service Device: @(card.SelfServiceDevice ?? "Unknown")</li>
                                        <li class="list-group-item SelfServiceOnly @(card.SelfServiceOnly ?? "empty")" data-value="@(card.SelfServiceOnly ?? "Unknown")">Self Service Only: @(card.SelfServiceOnly ?? "Unknown")</li>
                                        <li class="list-group-item OnMilitaryBase @(card.OnMilitaryBase ?? "empty")" data-value="@(card.OnMilitaryBase ?? "Unknown")">On Military Base: @(card.OnMilitaryBase ?? "Unknown")</li>
                                        <li class="list-group-item MilitaryIdRequired @(card.MilitaryIdRequired ?? "empty")" data-value="@(card.MilitaryIdRequired ?? "Unknown")">Military ID Required: @(card.MilitaryIdRequired ?? "Unknown")</li>
                                        <li class="list-group-item RestrictedAccess @(card.RestrictedAccess ?? "empty")" data-value="@(card.RestrictedAccess ?? "Unknown")">Restricted Access: @(card.RestrictedAccess ?? "Unknown")</li>*@
                                </ul>
                            </div>
                            <div class="card-footer contactInfo">
                                <h4 class="card-title contactInfoHeader">Contact Information</h4>
                                <p class="name" value="@card.Name">@card.Name</p>
                                <p class="address" value="@card.Address">@card.Address</p>
                                <p class="city-state-zip">
                                    <span class="city" value="@card.City">@card.City</span>
                                    <span>, </span>
                                    <span class="state" value="@card.State">@card.State </span>
                                    <span class="postalCode" value="@card.PostalCode">@card.PostalCode</span>
                                </p>

                                @******* TODO: Debug: Phone and WebAddress give ERROR: Object reference not set to an instance of an object - Issue in Contacts Model or DB Table ? *********@

                                @*<p class="phone @(card.Contact.Phone ?? "empty")" value="@(card.Contact.Phone ?? "empty")">Phone: @(card.Contact.Phone ?? "empty")</p>
                                    <p class="webAddress @(card.Contact.WebAddress ?? "empty")" value="@(card.Contact.WebAddress ?? "empty")">@(card.Contact.WebAddress ?? "empty")</p>*@


                                <p class="lat" value="@card.Latitude">Latitude: @card.Latitude</p>
                                <p class="lng" value="@card.Longitude">Longitude: @card.Longitude</p>
                                <blockquote class="blockquote my-1 pt-1">
                                    <h5 class="blockquote-footer locationType" value="@card.LocationType">
                                        Location Type: <cite title="@card.LocationType">@card.LocationType</cite>
                                    </h5>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>